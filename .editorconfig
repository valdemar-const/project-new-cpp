[*.*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.md]
indent_style = space
indent_size = 4
tab_width = 4

[.clang-format]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.sh]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[*.{xhtml, html}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.{ts,js,json}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[CMakeLists.txt]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.cmake]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.{c,h,cpp,hpp,cxx,hxx,cppm}]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
